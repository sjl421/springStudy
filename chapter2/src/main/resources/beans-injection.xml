<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--属性注入-->
    <bean id="car" class="com.smart.injection.Car">
        <!--brand后不小心多了一个空格，报异常NotWritablePropertyException，is not writable or has an invalid setter method-->
        <property name="brand">
            <value>红旗CA72</value>
        </property>
        <property name="maxSpeed">
            <value>200</value>
        </property>
    </bean>
    <!--构造函数注入-->
    <bean id="car1" class="com.smart.injection.Car">
        <constructor-arg type="java.lang.String"><!--①-->
            <value>红旗CA72</value>
        </constructor-arg>
        <constructor-arg type="double"><!--②-->
            <value>20000</value>
        </constructor-arg>
        <!--Car Bean中必须有和此处一致的构造函数（String、double参数的构造函数）-->
        <!--①和②的位置不会影响最终配置结果-->
    </bean>
</beans>